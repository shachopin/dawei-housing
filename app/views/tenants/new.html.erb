<!DOCTYPE html>
<html>
  <head>
    <title>TenantManagement</title>
    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="container">
      <% some_html_text = 
        '<button type="button" class="close" data-dismiss="alert" aria-label="Close"
          <span aria-hidden="true">x</span>
        </button>' 
      %>
      
      <div class="row">
        <% if flash.keys.any? %>
          <% flash.each do |k,v| %>
            <%= content_tag :div, some_html_text.html_safe+v, class:"col-xs-8 alert alert-#{k} alert-dismissible fade in" %>
          <% end %>
        <% end %>
      </div>

      <% if params[:show_past_applicants] %>
        <%= render 'shared/content_title', title: link_to("View Past Applicants", tenants_path) %></li>
      <% else %>
        <%= render 'shared/content_title', title: link_to("Apply Now", new_tenant_path) %></li>
      <% end %>
      
      <%= render 'form' %>

      
    </div>
  </body>
</html>
