<%= render "shared/content_title", title: "Log in" %>

<div class="row">
  <div class="col-xs-5 well">
    <%= form_tag 'login' do %>
      <div class='form-group'>
        <%=label_tag :username %>
        <%=text_field_tag :username, params[:username]||'', class: 'form-control' %><!-- this way, if the username is wrong, the old value will be kept, but not for password, no need for password, who wants to see dots anyway-->
      </div>

      <div class='form-group'>
        <%=label_tag :password%>
        <%=password_field_tag :password, '', class: 'form-control' %>  <!--notice the middle part-->
      </div>
      
      <%= submit_tag "Login", class:'btn btn-success' %>
    <% end %>
  </div>
</div>